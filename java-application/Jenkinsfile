pipeline {
    agent any  // Runs the pipeline on any available agent

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-11-openjdk'  // Specify your Java version or path
        PATH = "${JAVA_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the source code from your repository
                git 'https://your-repository-url.git'
            }
        }

        stage('Compile') {
            steps {
                script {
                    // Compile the Java program using javac
                    sh 'javac HelloWorld.java'
                }
            }
        }

        stage('Run') {
            steps {
                script {
                    // Run the compiled Java program
                    sh 'java HelloWorld'
                }
            }
        }

        stage('Test') {
            steps {
                // Optionally, you can add some testing here if you have tests
                echo 'Add your test steps here if needed.'
            }
        }

        stage('Clean Up') {
            steps {
                // Clean up any generated files (optional)
                sh 'rm -f HelloWorld.class'
            }
        }
    }

    post {
        always {
            echo 'This will always run, even if the pipeline fails'
        }
    }
}

